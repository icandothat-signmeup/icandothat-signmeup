%p#notice= notice

%p
  %b Title:
  = @event.title
%p
  %b Description:
  = @event.description
%p
  %b Location:
  = @event.location
%p
  %b Start time:
  = @event.start_time
%p
  %b End time:
  = @event.end_time
%p
  %b Min volunteers:
  = @event.min_volunteers
%p
  %b Max volunteers:
  = @event.max_volunteers
%p
  %b Commitment type:
  = @event.commitment_type

- if user_signed_in?
  - if @commitment
    %p
      %b Commitment Status
      = @commitment.status
  - else
    = link_to "Volunteer", commitments_path(:event_id => @event.id), :method => :post
                                   
= link_to 'Edit', edit_event_path(@event)
\|
= link_to 'Back', events_path
