= simple_form_for(@event) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :description
    = f.input :location
    = f.input :start_time
    = f.input :end_time
    = f.input :min_volunteers
    = f.input :max_volunteers
    = f.input :commitment_type

  .form-actions
    = f.button :submit
